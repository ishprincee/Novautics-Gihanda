# Bash
$RESOURCE_GROUP="novautics-mqtt-rg"
$LOCATION="uksouth"
$VM_NAME="novautics-mqtt-vm"
$IMAGE="Ubuntu2204"
$SIZE="Standard_B1s"

az group create --name $RESOURCE_GROUP --location $LOCATION

az vm create `
  --resource-group $RESOURCE_GROUP `
  --name $VM_NAME `
  --image $IMAGE `
  --size $SIZE `
  --admin-username azureuser `
  --generate-ssh-keys
